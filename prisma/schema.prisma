generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model UserContactInfo {
  id      String    @id @default(cuid())
  userId  String    @unique
  email   String    @unique
  phone   String    @unique
  Sticker Sticker[]
}

model StickerType {
  id      String    @id @default(cuid())
  name    String
  url     String
  Sticker Sticker[]
}

model Sticker {
  id               String          @id @default(cuid())
  ownerId          String
  stickerTypeId    String
  otherDeviceType  String?
  status           String?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  deviceType       DeviceType      @default(ITEM)
  stickerType      StickerType     @relation(fields: [stickerTypeId], references: [id], onDelete: Cascade)
  ownerContactInfo UserContactInfo @relation(fields: [ownerId], references: [id])

  @@index([ownerId])
  @@index([stickerTypeId])
}

enum DeviceType {
  LAPTOP
  WATERBOTTLE
  WALLET
  PHONE
  OTHER
  ITEM
}
