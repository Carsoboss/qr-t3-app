// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model UserTenet {
  clerkUserId String    @id
  firstName   String
  lastName    String
  email       String    @unique
  phone       String    @unique
  Sticker     Sticker[]
}

model StickerType {
  id      String    @id @default(cuid())
  name    String
  Sticker Sticker[]
}

enum DeviceType {
  LAPTOP
  WATERBOTTLE
  WALLET
  PHONE
  OTHER
  NONE
}

model Sticker {
  id              String      @id @default(cuid())
  userTenetId     String
  stickerTypeId   String
  otherDeviceType String?
  status          String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  deviceType      DeviceType  @default(NONE)
  stickerType     StickerType @relation(fields: [stickerTypeId], references: [id], onDelete: Cascade)
  userTenet       UserTenet   @relation(fields: [userTenetId], references: [clerkUserId], onDelete: Cascade)

  @@index([userTenetId])
  @@index([stickerTypeId])
}
